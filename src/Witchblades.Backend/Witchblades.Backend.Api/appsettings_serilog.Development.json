{
  "Serilog": {
    "Using": [],
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Information",
        "System": "Information",
        "Witchblades.Program": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "{Timestamp} {Message}{NewLine:1}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs\\latest-log.txt",
          "outputTemplate": "{Timestamp} {Message}{NewLine:1}"
        }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithProcessId",
      "WithThreadId"
    ],
    "Properties": {
      "ApplicationName": "Witchblades.Backend"
    }
  }
}